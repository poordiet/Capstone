<p id="notice"><%= notice %></p>

<div class="container">
  <br>
  <h1>States</h1>
  <br>
  <a class="btn btn-success float-right mt-4" href="states/new" role="button" aria-pressed="true">New State</a>
  <table id="example" class="table table-hover table-bordered">
    <thead class="thead-dark">
      <th>State Name</th>
      <th>State Abbreviation</th>
      <th>Show</th>
      <th>Edit</th>
    </thead>

    <tbody>
      <% @states.each do |state| %>
        <tr>
          <td><%= state.state_name %></td>
          <td><%= state.state_abbreviation %></td>
          <td><%= link_to 'Show', state, class: 'btn btn-primary btn-block' %></td>
          <td><%= link_to 'Edit', edit_state_path(state), class: 'btn btn-warning btn-block' %></td>
          <!--<td><%= link_to 'Delete', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<script type="text/javascript">
    var dataTable = $('#example').DataTable();

    $(document).ready(function() {
        dataTable;
    });

    document.addEventListener("turbolinks:before-cache", function() {
        if (dataTable !== null) {
            dataTable.destroy();
            dataTable = null;
        }
    });
</script>