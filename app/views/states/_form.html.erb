<%= form_with(model: state, local: true) do |form| %>
  <% if state.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(state.errors.count, "error") %> prohibited this state from being saved:</h2>

      <ul>
        <% state.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div id="form">
  <br>
  <h1>New State</h1>
  <br>
  <div class="form-row">
    <div class="field form-group col-md-2">
      <%= form.label :state_name %>
      <%= form.text_field :state_name, class: 'form-control' %>
    </div>

    <div class="field form-group col-md-2">
      <%= form.label :state_abbreviation %>
      <%= form.text_field :state_abbreviation, class: 'form-control' %>
    </div>
  </div>

  <div class="form-row">
    <div class="field form-group col-md-8">
      <div id="buttons">
        <%= link_to 'Cancel', :back, class: 'btn btn-danger btn-lg float-left'%>
        <button type="submit" class="btn btn-primary btn-lg float-right ">Submit</button>
      </div>
    </div>
  </div>
</div>
<% end %>
