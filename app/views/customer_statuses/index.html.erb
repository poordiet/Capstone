<p id="notice"><%= notice %></p>

<div class="container">
  <br>
  <h1>Customer Statuses</h1>
  <br>
  <a class="btn btn-success float-right mt-4" href="customer_statuses/new" role="button" aria-pressed="true">New Status</a>
  <table id="example" class="table table-hover table-bordered">
    <thead class="thead-dark">
      <th>Status Name</th>
      <th>Status Defintion</th>
      <th>Show</th>
      <th>Edit</th>
    </thead>

    <tbody>
      <% @customer_statuses.each do |cs| %>
        <tr>
          <td><%= cs.status %></td>
          <td><%= cs.definition %></td>
          <td><%= link_to 'Show', cs, class: 'btn btn-info btn-block' %></td>
          <td><%= link_to 'Edit', edit_customer_status_path(cs), class: 'btn btn-warning btn-block' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<br>

<script type="text/javascript">
    var dataTable = $('#example').DataTable();

    $(document).ready(function() {
        dataTable;
    });

    document.addEventListener("turbolinks:before-cache", function() {
        if (dataTable !== null) {
            dataTable.destroy();
            dataTable = null;
        }
    });
</script>
