<p id="notice"><%= notice %></p>

<div class="container">
    <br>
    <h1>Stores</h1>
    <br>
    <a class="btn btn-success float-right mt-4" href="stores/new" role="button" aria-pressed="true">New Store</a>
    <table id="example" class="table table-hover table-bordered">
        <thead class="thead-dark">
            <th>Store Name</th>
            <th>Store Address</th>
            <th>Store City</th>
            <th>State</th>
            <th>Store Zip</th>
            <th>Store Phone</th>
            <th>Show</th>
            <th>Edit</th>
        </thead>
        <tbody>
            <% @stores.each do |store| %>
            <tr>
                <td><%= store.store_name %></td>
                <td><%= store.store_address %></td>
                <td><%= store.store_city %></td>
                <td><%= store.state.state_name %></td>
                <td><%= store.store_zip %></td>
                <td><%= store.store_phone %></td>
                <td><%= link_to 'Show', store, class: 'btn btn-info btn-block' %></td>
                <td><%= link_to 'Edit', edit_store_path(store), class: 'btn btn-warning btn-block' %></td>
                <!--<td><%= link_to 'Delete', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<br>

<script type="text/javascript">
        var dataTable = $('#example').DataTable();

        $(document).ready(function() {
            dataTable;
        });

        document.addEventListener("turbolinks:before-cache", function() {
            if (dataTable !== null) {
                dataTable.destroy();
                dataTable = null;
            }
        });
    </script>