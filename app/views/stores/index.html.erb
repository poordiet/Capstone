<p id="notice"><%= notice %></p>

<h1>Stores</h1>

<table>
    <thead>
        <tr>
            <th>Store Name</th>
            <th>Store Address</th>
            <th>Store City</th>
            <th>State</th>
            <th>Store Zip</th>
            <th>Store Phone</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @stores.each do |store| %>
        <tr>
            <td><%= store.store_name %></td>
            <td><%= store.store_address %></td>
            <td><%= store.store_city %></td>
            <td><%= store.state.state_name %></td>
            <td><%= store.store_zip %></td>
            <td><%= store.store_phone %></td>
            <td><%= link_to 'Show', store %></td>
            <td><%= link_to 'Edit', edit_store_path(store) %></td>
            <td><%= link_to 'Delete', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Store', new_store_path %>