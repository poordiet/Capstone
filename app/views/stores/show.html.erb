<br>
<div class="container">
    <div class="row">
        <div class="col-11">
            <p>
                <%= link_to 'Edit', edit_store_path(@store), class:'btn btn-warning btn-lg float-right mr-2' %>
                <%= link_to 'Back', stores_path, class: 'btn btn-danger btn-lg float-right mr-2'%>
            </p>

            <p id="notice"><%= notice %></p>

            <h1>
                <%= @store.store_name %>
            </h1>

            <p>
                <strong>Store Address:</strong>
                <%= @store.store_address %>
            </p>

            <p>
                <strong>Store City:</strong>
                <%= @store.store_city %>
            </p>

            <p>
                <strong>State:</strong>
                <%= @store.state.state_abbreviation %>
            </p>

            <p>
                <strong>Store Zip:</strong>
                <%= @store.store_zip %>
            </p>

            <p>
                <strong>Store Phone:</strong>
                <%= @store.store_phone %>
            </p>
        </div>
        <br>
        <h2>Employees</h2>
        <br>
        <div class="container">
            <table id="example" class="table table-striped table-bordered" style="width: 1000px;">
                <thead class="thead-dark">
                    <th>Employee Name</th>
                    <th>Employee Email</th>
                    <th>Employee Phone</th>
                </thead>
                <tbody>
                    <% @store.employee_stores.each do |employee_store| %>
                    <tr>
                        <td>
                        <%= employee_store.employee.emp_first_name %>
                        <%= employee_store.employee.emp_last_name %>
                        </td>
                        <td><%= employee_store.employee.emp_email %></td>
                        <td><%= employee_store.employee.emp_primary_phone %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<br>
<script type="text/javascript">
    var dataTable = $('#example').DataTable();

    $(document).ready(function() {
        dataTable;
    });

    document.addEventListener("turbolinks:before-cache", function() {
        if (dataTable !== null) {
            dataTable.destroy();
            dataTable = null;
        }
    });
</script>
