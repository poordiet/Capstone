<p id="notice"><%= notice %></p>

<h1 style="margin-left: 130px;">Customers</h1>
<br>


<div class="container">
  <a class="btn btn-success active float-right mt-4" href="customers/new" role="button" aria-pressed="true">New Customer</a>
	<table id="example" class="table table-hover table-bordered">
		<thead class="thead-dark">
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Date Obtained</th>
      <th>Address</th>
      <th>City</th>
      <th>Show</th>
      <th>Edit</th>
		</thead>
		<tbody>
     <% @customers.each do |customer| %>
			<tr>
				<td><%= customer.customer_first_name %></td>
				<td><%= customer.customer_last_name %></td>
				<td><%= customer.customer_primary_phone %></td>
				<td><%= customer.customer_email %></td>
				<td><%= customer.date_obtained %></td>
				<td><%= customer.customer_address %></td>
        <td><%= customer.customer_city %></td>
        <td><a class="btn btn-primary active btn-block"<%= link_to 'Show', customer %></td>
        <td><a class="btn btn-warning active btn-block"<%= link_to 'Edit', edit_customer_path(customer) %></td>
			</tr>
       <% end %>
		</tbody>
	</table>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example').DataTable();
  });
</script>
