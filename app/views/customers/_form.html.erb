<%= form_with(model: customer, local: true) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :state_id, 'State' %>
    <%= form.collection_select :state_id, State.all, :id, :state_abbreviation %>
  </div>

  <div class="field">
    <%= form.label :customer_first_name, 'First Name' %>
    <%= form.text_field :customer_first_name %>
  </div>

  <div class="field">
    <%= form.label :customer_last_name, 'Last Name' %>
    <%= form.text_field :customer_last_name %>
  </div>

  <div class="field">
    <%= form.label :customer_address, 'Address' %>
    <%= form.text_field :customer_address %>
  </div>

  <div class="field">
    <%= form.label :customer_city, 'City' %>
    <%= form.text_field :customer_city %>
  </div>

  <div class="field">
    <%= form.label :customer_zip, 'Zip Code' %>
    <%= form.text_field :customer_zip %>
  </div>

  <div class="field">
    <%= form.label :customer_primary_phone, 'Primary Phone' %>
    <%= form.text_field :customer_primary_phone %>
  </div>

  <div class="field">
    <%= form.label :customer_secondary_phone, 'Secondary Phone' %>
    <%= form.text_field :customer_secondary_phone %>
  </div>

  <div class="field">
    <%= form.label :customer_email, 'Email' %>
    <%= form.text_field :customer_email %>
  </div>

  <div class="field">
    <%= form.label :date_obtained, 'Date Obtained' %>
    <%= form.date_select :date_obtained %>
  </div>

  <div class="field">
    <%= form.label :customer_notes, 'Customer Notes' %>
    <%= form.text_field :customer_notes %>
  </div>

  <div class="pets">
    <%= link_to_add_association 'Add Pet', form, :pets %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
