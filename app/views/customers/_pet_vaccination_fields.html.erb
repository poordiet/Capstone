
<div class="nested-fields col-md-12">
<h4>Add Vaccination</h4>
<hr>
    <p><i>Must fill out Date Given AND Duration, or Date Expiration.</i></p>
    <div class ="form-row">
    <div class="field form-group">
        <%= f.label :vaccine_id, 'Vaccine *' %>
        <br>
        <%= f.collection_select :vaccine_id, Vaccine.all, :id, :vaccine_name, {prompt: "- Select Vaccine -"} %>
    </div>
    </div>

<div class="form-row">
  <div class="field">
    <%= f.label :date_given, 'Date Given' %>
     <%= f.text_field :date_given, type: 'date', class: 'form-control col-md-12' %>
  </div>
  </div>

  <br>

  <div class="form-row">
  <div class="field">
    <%= f.label :duration, 'Duration (Years)' %>
    <br>
    <%= f.select :duration, [0.5, 1, 2, 3, 4, 5],prompt: "- Select Duration -", class: 'form-control' %>
  </div>
  </div>
  <br>

  <div class="form-row">
  <div class="field">
    <%= f.label :date_expire, 'Expiration Date' %>
     <%= f.text_field :date_expire, type: 'date', class: 'form-control'%>
  </div>
  </div>

    <br>
    <div class="form-row col-md-12">
    <%= link_to_remove_association "Remove Vaccine", f, class: 'btn btn-secondary btn-sm' %>
    </div>
    <hr>
</div>
