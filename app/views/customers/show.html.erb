<br>
<div class="container">
<div class="row">
<div class = "col-11" >
<p>
<%= link_to 'Update', edit_customer_path(@customer), class:'btn btn-warning btn-lg float-right mr-2' %>
<%= link_to 'Back', customers_path, class: 'btn btn-danger btn-lg float-right mr-2'%>
</p>

<p id="notice"><%= notice %></p>

<h1>
  <%= @customer.customer_first_name %> <%=@customer.customer_last_name%>
</h1>
<br>
<p>
  <strong>Status:</strong>
  <%= @customer.customer_status.status %>
</p>

<p>
  <strong>Date Obtained:</strong>
  <%if @customer.date_obtained.nil?%>
              <%= @customer.date_obtained%>
              <%else%>
              <%= @customer.date_obtained.to_formatted_s(:long) %>
              <%end%>
</p>

<p>
  <strong>Primary Phone:</strong>
  <%= number_to_phone(@customer.customer_primary_phone) %>
</p>

<p>
  <strong>Secondary Phone:</strong>
  <%= number_to_phone(@customer.customer_secondary_phone) %>
</p>

<p>
  <strong>Email:</strong>
  <%= @customer.customer_email %>
</p>


<p>
  <strong>Address:</strong>
  <%= @customer.customer_address %>
</p>

<p>
  <strong>City:</strong>
  <%= @customer.customer_city %>
</p>

<p>
  <strong>State:</strong>
  <%= @customer.state.state_name %>
</p>


<p>
  <strong>Zip Code:</strong>
  <%= @customer.customer_zip %>
</p>


<p>
  <strong>Customer Notes:</strong>
  <%= @customer.customer_notes %>
</p>

<br>
<h2>Pets</h2>
<br>

<div class="container">
<%= link_to "Add Pet", 
new_customer_pet_path({:customer_id => @customer.id, 
:customer_first_name => @customer.customer_first_name,
:customer_last_name => @customer.customer_last_name}), 
:class => "btn btn-success float-right mt-4" %>
	<table id="example" class="table table-striped table-bordered" style="width: 1000px;">
		<thead>
      <th>Name</th>
      <th>Gender</th>
      <th>Color</th>
      <th>Breed</th>
      <th>Weight</th>
      <th>Show</th>
      <th>Edit</th>
      <th>New Appointment</th>
		</thead>
		<tbody>
     <% @customer.pets.each do |pet| %>
			<tr>
				<td><%= pet.pet_name %></td>
        <td><%= pet.pet_gender %></td>
        <td><%= pet.pet_color %></td>
        <td><%= pet.pet_breed %></td>
        <td><%= pet.pet_weight %></td> 
        <td><a class="btn btn-primary btn-block"<%= link_to 'Show', pet %></td> 
        <td><%= link_to "Update", edit_pet_path(pet), 
        :class => "btn btn-warning btn-block" %></td>
        <td><%= link_to "New Appointment", new_pet_grooming_appointment_path(:pet_id => pet.id, :pet_name => pet.pet_name, 
        :customer_last_name => pet.customer.customer_last_name, :customer_first_name => pet.customer.customer_first_name), 
        :class => "btn btn-success btn-block" %></td>
			</tr>
       <% end %>
		</tbody>
	</table>
</div>
</div>
</div>

  

<script type="text/javascript">
  var dataTable = $('#example').DataTable();

  $(document).ready(function() {
   dataTable;
  });
  
  document.addEventListener("turbolinks:before-cache", function() {
    if (dataTable !== null) {
    dataTable.destroy();  
    dataTable = null;
    }
  });
</script>
<br>