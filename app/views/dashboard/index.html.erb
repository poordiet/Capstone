
<div class="container">
<br>
<hr>
<br>
<div class="row"> 
    <div class="col-lg-6 info-box">
        <h2>Sales Overview</h2>
        <p>
            Today's Sales: <span class="text-primary"> <%= number_to_currency @sales_by_day%></span>
        </p>
    </div> 
    <div class="col-lg-6 info-box">
        <h2>Grooming Overview</h2>
        <p>
        Total Groomings Performed Today: <span class="text-primary"> <%= @grooming_per_day%></span>
        </p>
    </div>
</div>
<br>
<hr>
<br>


<table id="example" class="table table-hover table-bordered">
		<thead class="thead-dark">
    <tr>
      <th>Customer</th>
      <th>Pet Name</th>
      <th>Appt Date/Time</th>
      <th>Total</th>
  
    </tr>
  </thead>


<%zone = ActiveSupport::TimeZone.new("Central Time (US & Canada)")%>
<%Time.now.in_time_zone(zone)%>

    <br>
    <br>
   <h2>Today's Grooming Appointments</h2>
    <br> 
  <tbody>
    <% @grooming_appointments.each do |grooming_appointment| %>
    <%counter = 0%>
      <tr>
        <% if grooming_appointment.appt_date.strftime("%m/%d/%Y") == Date.current.strftime("%m/%d/%Y") %> 
        <td><%= grooming_appointment.pet.customer.customer_first_name %>
        <%= grooming_appointment.pet.customer.customer_last_name %></td>
        <td><%= grooming_appointment.pet.pet_name %></td>
        <td><%=  grooming_appointment.appt_date.strftime("%b %d %Y")%> <%= grooming_appointment.appt_time.strftime("%I:%M%p")%></td>
        <td><%= number_to_currency(grooming_appointment.appt_total) %></td>
        <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<hr>
<br>

 <h2>Pet Birthdays this Month</h2>
    <table id="example" class="table table-striped table-bordered" style="width: 1000px;">
	<thead class="thead-dark">
      <th>Pet</th>
      <th>Birthday</th>
		</thead>
		<tbody>
     <% @pets.each do |pets| %>
		<tr>
      <% if pets.pet_birthdate.present? && pets.pet_birthdate.strftime("%m%d") >= Date.today.beginning_of_month.strftime('%m%d') &&  pets.pet_birthdate.strftime("%m%d") <= Date.today.end_of_month.strftime('%m%d')%>
      <td><%= pets.pet_name %></td>
      <td><%= pets.pet_birthdate%></td>
        <% end %>
       <% end %>
		</tbody>
	</table>


</div>








