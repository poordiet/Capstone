<%= form_with(model: pet_vaccination, local: true) do |form| %>
  <% if pet_vaccination.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pet_vaccination.errors.count, "error") %> prohibited this pet_vaccination from being saved:</h2>

      <ul>
        <% pet_vaccination.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-row">
<div class="field">
  <%= form.label :pet_id, 'Pet: ' %>
  <%= form.hidden_field :pet_id, :value => @pet_vaccination.pet.id %>
  <%= form.label :pet_name, :value => @pet_vaccination.pet.pet_name%>
</div>
</div>

<div class="form-row">
  <div class="field">
    <%= form.label :vaccine_id, 'Vaccine' %>
    <br>
    <%= form.collection_select :vaccine_id, Vaccine.all, :id, :vaccine_name %>
  </div>
</div>

    <div class="form-row">
  <div class="field">
    <%= form.label :date_given, 'Date Given' %>
     <%= form.text_field :date_given, type: 'date', class: 'form-control col-md-12' %>
  </div>
  </div>

  <br>

  <div class="form-row">
  <div class="field">
    <%= form.label :duration, 'Duration' %>
    <br>
    <%= form.select :duration, [0.5, 1, 2, 3, 4, 5],options = {include_blank: true}, class: 'form-control' %>
  </div>
  </div>
  <br>

  <div class="form-row">
  <div class="field">
    <%= form.label :date_expire, 'Expiration Date' %>
     <%= form.text_field :date_expire, type: 'date', class: 'form-control col-md-12' %>
  </div>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
