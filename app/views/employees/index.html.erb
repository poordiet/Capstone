<p id="notice"><%= notice %></p>

<div class="container">
    <br>
    <h1>Employees</h1>
    <br>
    <a class="btn btn-success float-right mt-4" href="employees/new" role="button" aria-pressed="true">New Employee</a>
    <table id="example" class="table table-hover table-bordered">
        <thead class="thead-dark">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Primary Phone</th>
            <th>Email</th>
            <th>Date Hired</th>
            <th>City</th>
            <th>Show</th>
            <th>Edit</th>
        </thead>
        <tbody>
            <% @employees.each do |employee| %>
            <tr>
                <td><%= employee.emp_first_name %></td>
                <td><%= employee.emp_last_name %></td>
                <td><%= number_to_phone(employee.emp_primary_phone) %></td>
                <td><%= employee.emp_email %></td>
                <td><%= employee.emp_hire_date %></td>
                <td><%= employee.emp_city %></td>
                <td><%= link_to 'Show', employee, class: 'btn btn-primary btn-block' %></td>
                <td><%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-warning btn-block' %></td>
                <!--<td><%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
            </tr>
            <% end %>
        </tbody>
    </table>
    <br>

    <script type="text/javascript">
        var dataTable = $('#example').DataTable();

        $(document).ready(function() {
            dataTable;
        });

        document.addEventListener("turbolinks:before-cache", function() {
            if (dataTable !== null) {
                dataTable.destroy();
                dataTable = null;
            }
        });
    </script>