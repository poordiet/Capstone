<br>
<div class="container">
    <div class="row">
        <div class="col-11">
            <p>
                <%= link_to 'Update', edit_employee_path(@employee), class:'btn btn-warning btn-lg float-right mr-2' %>
                <%= link_to 'Back', employees_path, class: 'btn btn-danger btn-lg float-right mr-2'%>
            </p>

            <p id="notice"><%= notice %></p>

            <h1>
                <%= @employee.emp_first_name %> <%= @employee.emp_last_name %>
            </h1>

            <p>
                <strong>Primary Phone:</strong>
                <%= number_to_phone(@employee.emp_primary_phone) %>
            </p>

            <p>
                <strong>Secondary Phone:</strong>
                <%= @employee.emp_secondary_phone %>
            </p>

            <p>
                <strong>Email:</strong>
                <%= @employee.emp_email %>
            </p>

            <p>
                <strong>Hire Date:</strong>
                <%= @employee.emp_hire_date.to_formatted_s(:long) %>
            </p>

            <p>
                <strong>Address:</strong>
                <%= @employee.emp_address %>
            </p>

            <p>
                <strong>City:</strong>
                <%= @employee.emp_city %>
            </p>

            <p>
                <strong>State:</strong>
                <%= @employee.state.state_abbreviation %>
            </p>

            <p>
                <strong>Zip Code:</strong>
                <%= @employee.emp_zip %>
            </p>

            <br>
            <h2>Stores</h2>
            <br>

            <div class="container">
                <%= link_to "Add Store", 
                new_store_path({:store_id => @employee.id, 
                :emp_first_name => @employee.emp_first_name,
                :emp_last_name => @employee.emp_last_name}), 
                :class => "btn btn-success float-right mt-4" %>
                <table id="example" class="table table-striped table-bordered" style="width: 1000px;">
                    <thead>
                        <tr>
                            <!--<th>Store Name</th>-->
                            <th>Store Address</th>
                            <th>Store City</th>
                            <th>Store State</th>
                            <th>Store Zip</th>
                            <th>Store Phone</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @employee.stores.each do |store| %>
                        <tr>

                            <% if false %>
                            <td><%= store.store_name %></td>
                            <% end %>

                            <td><%= store.store_address %></td>
                            <td><%= store.store_city %></td>
                            <td><%= store.state.state_abbreviation %></td>
                            <td><%= store.store_zip %></td>
                            <td><%= number_to_phone(store.store_phone) %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var dataTable = $('#example').DataTable();

    $(document).ready(function() {
        dataTable;
    });

    document.addEventListener("turbolinks:before-cache", function() {
        if (dataTable !== null) {
            dataTable.destroy();
            dataTable = null;
        }
    });
</script>
