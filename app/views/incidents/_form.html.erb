<%= form_with(model: incident, local: true) do |form| %>
  <% if incident.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(incident.errors.count, "error") %> prohibited this incident from being saved:</h2>

      <ul>
        <% incident.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div id="form">
  <br>
  <h1>New Incident</h1>
  <br>
  <div class="form-row">
    <div class="field form-group col-md-2">
      <%= form.label :grooming_appointment_id, 'Grooming Appointment' %>
      <%= form.collection_select :grooming_appointment_id, GroomingAppointment.all, :id, :appt_date %>
    </div>
  </div>

  <div class="field">
    <%= form.hidden_field :incident_status_id, value: 1%>
  </div>

  <div class="form-row">
    <div class="field form-group col-md-2">
      <%= form.label :incident_notes, 'Incident Notes' %>
      <%= form.text_field :incident_notes, class: 'form-control' %>
    </div>
  </div>

  <div class="form-row">
    <div class="field form-group col-md-2">
      <%= form.label :incident_cost, 'Incident Cost' %>
      <%= form.text_field :incident_cost, class: 'form-control' %>
    </div>
  </div>

  <br>
  <div class="form-row">
    <div class="field form-group col-md-4">
      <div id="buttons">
        <%= link_to 'Cancel', :back, class: 'btn btn-danger btn-lg float-left'%>
        <button type="submit" class="btn btn-primary btn-lg float-right ">Submit</button>
      </div>
    </div>
  </div>
</div>
<% end %>
