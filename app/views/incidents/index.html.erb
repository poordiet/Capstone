<p id="notice"><%= notice %></p>

<div class="container">
  <br>
  <h1>Incidents</h1>
  <br>
  <table id="example" class="table table-hover table-bordered">
    <thead class="thead-dark">
      <th>Grooming Appointment</th>
      <th>Incident Notes</th>
      <th>Incident Cost</th>
      <th>Show</th>
      <th>Edit</th>
    </thead>
    <tbody>
      <% @incidents.each do |incident| %>
        <tr>
          <td><%= incident.grooming_appointment.appt_date %></td>
          <td><%= incident.incident_notes %></td>
          <td><%= incident.incident_cost %></td>
          <td><%= link_to 'Show', incident %></td>
          <td><%= link_to 'Edit', edit_incident_path(incident) %></td>
          <!--<td><%= link_to 'Delete', incident, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<script type="text/javascript">
        var dataTable = $('#example').DataTable();

        $(document).ready(function() {
            dataTable;
        });

        document.addEventListener("turbolinks:before-cache", function() {
            if (dataTable !== null) {
                dataTable.destroy();
                dataTable = null;
            }
        });
    </script>