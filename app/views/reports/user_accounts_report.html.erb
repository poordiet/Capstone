 <h2>Inactive Employees with User Accounts</h2>
    <table id="example" class="table table-striped table-bordered" style="width: 1000px;">
	<thead class="thead-dark">
      <th>Employee</th>
      <th>User Email</th>
      <th>Status</th>
		</thead>
		<tbody>
     <% @inactive_employees.each do |emp| %>
	 <tr>
      <td><%= emp.emp_first_name%> <%= emp.emp_last_name %></td>
      <td><%= emp.email%></td>
      <td><%= emp.status%></td>
       <% end %>
		</tbody>
	</table>

    <br>
    <hr>
    <br>
</div>