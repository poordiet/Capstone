<div class="container">
<br>
   <!-- Find all the pets with Birthdays this month-->
<% pets_with_birthdays = [ ]%>
<% @pets.each do |pet| %>
<% if pet.pet_birthdate.present? && pet.pet_birthdate.strftime("%m%d") >= Date.today.beginning_of_month.strftime('%m%d') &&  pet.pet_birthdate.strftime("%m%d") <= Date.today.end_of_month.strftime('%m%d')%>
    <% pets_with_birthdays << pet %>
<%end%>
<%end%>


<hr> 
 <h2>Pet Birthdays this Month: <span class="dynamic"><%=Date.today.strftime('%B')%> <%=Date.today.year%></span></h2>
 <p class="report-date">Date Created: <%=Date.today.to_formatted_s(:long)%></p>
<hr>
<!-- Display all the pets with Birthdays this Month-->
<div class = "container">
<table id="example" class="table table-striped table-bordered">
		<thead class="thead-dark">
    <tr>
      <th>Customer</th>
      <th>Customer Phone</th>
      <th>Pet</th>
      <th>Birthday</th>
      <th>Show</th>
  
    </tr>
  </thead>
  <tbody>
    <% pets_with_birthdays.each do |pet| %>
	<tr>
      <td><%= pet.customer.customer_first_name %> <%= pet.customer.customer_last_name %></td>
      <td><%= pet.customer.customer_primary_phone %></td>
      <td><%= pet.pet_name %></td>
      <td><%= pet.pet_birthdate.to_formatted_s(:long)%></td>
       <td><%= link_to 'Show', pet, class: 'btn btn-block btn-info'%></td>
    <% end %>
  </tbody>
</table>


</div>



<script type="text/javascript">
   var dataTable = $('#example').DataTable( {
    

    "columns": [
    null,
    null,
    null,
    {"type": "date"},
    null
    
  ]
    
    

} );

    $(document).ready(function() {
        dataTable;
    });

    document.addEventListener("turbolinks:before-cache", function() {
        if (dataTable !== null) {
            dataTable.destroy();
            dataTable = null;
        }
    });
</script>