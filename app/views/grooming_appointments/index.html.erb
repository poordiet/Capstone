<p id="notice"><%= notice %></p>

<div class="container">
<h1>Grooming Appointments</h1>
<a class="btn btn-success float-right mt-4" href="grooming_appointments/new" role="button" aria-pressed="true">New Appointment</a>

<table id="example" class="table table-hover table-bordered">
		<thead class="thead-dark">
    <tr>
      <th>Pet Name</th>
      <th>Appt Date</th>
      <th>Blades</th>
      <th>Services</th>
      <th>Store</th>
      <th>Total</th>
      <th>Payment Type</th>
      <th>Show</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @grooming_appointments.each do |grooming_appointment| %>
      <tr>
        <td><%= grooming_appointment.pet.pet_name %></td>
        <td><%= grooming_appointment.appt_date.to_formatted_s(:long) %></td>
        <td><%= grooming_appointment.appt_blades %></td>
        <td><%= grooming_appointment%></td>
        <td><%= grooming_appointment.store.store_address %></td>
        <td><%= grooming_appointment.appt_total %></td>
        <td><%= grooming_appointment.payment_type.payment_type %></td>
        <td><%= link_to 'Show', grooming_appointment %></td>
        <td><%= link_to 'Edit', edit_grooming_appointment_path(grooming_appointment) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example').DataTable();
  });
</script>