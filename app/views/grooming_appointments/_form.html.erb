  </div>

  <div class="field">
    <%= form.label :appt_total, 'Total' %>
    <%= form.text_field :appt_total %>
  </div>

  <div class="field">
    <%= form.label :appt_notes, 'Appt Notes' %>
    <%= form.text_field :appt_notes %>
  </div>

  <div class="field">
    <%= form.label :customer_feedback, 'Customer Feedback' %>
