<p id="notice"><%= notice %></p>

<div class="container">
    <br>
    <h1>Vaccines</h1>
    <br>
    <a class="btn btn-success float-right mt-4" href="vaccines/new" role="button" aria-pressed="true">New Vaccine</a>
    <table id="example" class="table table-hover table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Vaccine Name</th>
        <th>Vaccine Description</th>
        <th>Vaccine Required</th>
        <th>Show</th>
        <th>Edit</th>
      </tr>
    </thead>

    <tbody>
      <% @vaccines.each do |vaccine| %>
        <tr>
          <td><%= vaccine.vaccine_name %></td>
          <td><%= vaccine.vaccine_description %></td>
          <td><%= vaccine.vaccine_required.upcase %></td>
          <td><%= link_to 'Show', vaccine, class: 'btn btn-primary btn-block' %></td>
          <td><%= link_to 'Edit', edit_vaccine_path(vaccine), class: 'btn btn-warning btn-block' %></td>
          <!--<td><%= link_to 'Delete', vaccine, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<script type="text/javascript">
    var dataTable = $('#example').DataTable();

    $(document).ready(function() {
        dataTable;
    });

    document.addEventListener("turbolinks:before-cache", function() {
        if (dataTable !== null) {
            dataTable.destroy();
            dataTable = null;
        }
    });
</script>