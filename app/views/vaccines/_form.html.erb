<%= form_with(model: vaccine, local: true) do |form| %>
  

<div class="status-content">
  <br>
  <% if vaccine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vaccine.errors.count, "error") %> prohibited this vaccine from being saved:</h2>

      <ul>
        <% vaccine.errors.full_messages.each do |message| %>
          <li>â€¢ <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h1>New Vaccine</h1>
  <i>* Indicates Required Fields</i>
  <hr>
  <div class="form-row">
    <div class="field form-group col-md-6">
      <%= form.label :vaccine_name, 'Vaccine Name *' %>
      <%= form.text_field :vaccine_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-row">
   <div class="field form-group col-md-6">
      <%= form.label :vaccine_required, 'Vaccine Required *' %>
      <br>
      <%= form.select :vaccine_required, ['Y', 'N'], prompt: '- Select -' %>
    </div>
  </div>

  <div class="form-row">
    <div class="field form-group col-md-12">
      <%= form.label :vaccine_description, 'Vaccine Description' %>
      <%= form.text_area :vaccine_description, class: 'form-control', rows: '3' %>
    </div>
  </div>

  <br>
  <div class="form-row">
    <div class="field form-group col-md-12">
          <%= link_to 'Cancel', session[:prev_url], class: 'btn btn-danger btn-lg float-left'%>
          <button type="submit" class="btn btn-primary btn-lg float-right ">Submit</button>
    </div>
  </div>
</div>
<% end %>
