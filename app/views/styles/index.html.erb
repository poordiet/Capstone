<p id="notice"><%= notice %></p>

<div class="container">
  <br>
  <h1>Styles</h1>
  <br>
  <a class="btn btn-success float-right mt-4" href="styles/new" role="button" aria-pressed="true">New Styles</a>
  <table id="example" class="table table-hover table-bordered">
    <thead class="thead-dark">
      <th>Style Name</th>
      <th>Style Description</th>
      <th>Show</th>
      <th>Edit</th>
    </thead>

    <tbody>
      <% @styles.each do |style| %>
        <tr>
          <td><%= style.style_name %></td>
          <td><%= style.style_description %></td>
          <td><%= link_to 'Show', style, class: 'btn btn-primary btn-block' %></td>
          <td><%= link_to 'Edit', edit_style_path(style), class: 'btn btn-warning btn-block' %></td>
          <!--<td><%= link_to 'Delete', style, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<br>

<script type="text/javascript">
    var dataTable = $('#example').DataTable();

    $(document).ready(function() {
        dataTable;
    });

    document.addEventListener("turbolinks:before-cache", function() {
        if (dataTable !== null) {
            dataTable.destroy();
            dataTable = null;
        }
    });
</script>