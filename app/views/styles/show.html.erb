<br>
<div class="container">
  <div class="row">
    <div class="col-11">

      <p>
        <%= link_to 'Update', edit_style_path(@style), class:'btn btn-warning btn-lg float-right mr-2' %>
        <%= link_to 'Back', styles_path, class: 'btn btn-danger btn-lg float-right mr-2'%>
      </p>
    
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Style Name:</strong>
        <%= @style.style_name %>
      </p>

      <p>
        <strong>Style Description:</strong>
        <%= @style.style_description %>
      </p>
    </div>
  </div>
</div>