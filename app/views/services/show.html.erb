<br>
<div class="container">
  <div class="row">
    <div class="col-11">

     <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>">
          <%= message %>
        </div>
      <% end %>
      <br>

      <p>
          <%= link_to 'Edit', edit_service_path(@service), class:'btn btn-warning btn-lg float-right mr-2' %>
          <%= link_to 'Back', services_path, class: 'btn btn-danger btn-lg float-right mr-2'%>
      </p>

      <h1>Service</h1>
      <hr>
      <div class="field form-group col-md-4">
        <p>
          <strong>Service Status:</strong>
          <%= @service.service_status.service_status %>
        </p>
      </div>

      <div class="field form-group col-md-4">
        <p>
          <strong>Service Name:</strong>
          <%= @service.service_name %>
        </p>
      </div>

      <div class="field form-group col-md-7">
        <p>
          <strong>Service Description:</strong>
          <%= @service.service_description %>
        </p>
      </div>
    </div>
  </div>
</div>