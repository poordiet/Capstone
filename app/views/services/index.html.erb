<p id="notice"><%= notice %></p>

<div class="container">
  <br>
  <h1>Services</h1>
  <br>
  <a class="btn btn-success float-right mt-4" href="services/new" role="button" aria-pressed="true">New Service</a>
  <table id="example" class="table table-hover table-bordered">
    <thead class="thead-dark">
      <th>Service Status</th>
      <th>Service Name</th>
      <th>Service Description</th>
      <th>Show</th>
      <th>Edit</th>
    </thead>

    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td><%= service.service_status.service_status %></td>
          <td><%= service.service_name %></td>
          <td><%= service.service_description %></td>
          <td><%= link_to 'Show', service, class: 'btn btn-primary btn-block' %></td>
          <td><%= link_to 'Edit', edit_service_path(service), class: 'btn btn-warning btn-block' %></td>
          <!--<td><%= link_to 'Delete', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<script type="text/javascript">
    var dataTable = $('#example').DataTable();

    $(document).ready(function() {
        dataTable;
    });

    document.addEventListener("turbolinks:before-cache", function() {
        if (dataTable !== null) {
            dataTable.destroy();
            dataTable = null;
        }
    });
</script>