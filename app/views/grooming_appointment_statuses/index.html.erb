
<p id="notice"><%= notice %></p>

<div class="container">
  <br>
  <h1>Grooming Appointment Statuses</h1>
  <br>
  <a class="btn btn-success float-right mt-4" href="grooming_appointment_statuses/new" role="button" aria-pressed="true">New Status</a>
  <table id="example" class="table table-hover table-bordered">
    <thead class="thead-dark">
      <th>Status</th>
      <th>Description</th>
      <th>Show</th>
      <th>Edit</th>
    </thead>

    <tbody>
      <% @grooming_appointment_statuses.each do |grooming_appointment_status| %>
        <tr>
          <td><%= grooming_appointment_status.status %></td>
        <td><%= grooming_appointment_status.definition %></td>
          <td><%= link_to 'Show', grooming_appointment_status, class: 'btn btn-info btn-block' %></td>
          <td><%= link_to 'Edit', edit_grooming_appointment_status_path(grooming_appointment_status), class: 'btn btn-warning btn-block' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<br>

<script type="text/javascript">
    var dataTable = $('#example').DataTable();

    $(document).ready(function() {
        dataTable;
    });

    document.addEventListener("turbolinks:before-cache", function() {
        if (dataTable !== null) {
            dataTable.destroy();
            dataTable = null;
        }
    });
</script>
